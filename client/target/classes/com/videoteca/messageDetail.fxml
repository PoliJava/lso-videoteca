<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_LEFT" spacing="10" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.videoteca.MessageDetailController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Message Title" />
      <Label fx:id="senderLabel" text="From: " />
      <Text fx:id="messageContentText" wrappingWidth="360.0" />
   </children>
</VBox>